{
  "name": "k8sapp_ui_template",
  "description": "This is the GitHub template repo for all Next.js UIs",
  "author": "Andrews McMeel Universal",
  "homepage": "https://github.com/Andrews-McMeel-Universal/k8sapp_ui_template",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Andrews-McMeel-Universal/k8sapp_ui_template"
  },
  "scripts": {
    "keys:setup": "run-s \"keys:get {2:-development}\" -- ${2}",
    "keys:edit": "pwsh -c \"./Edit-Secrets.ps1\"",
    "keys:get": "pwsh -c \"./Get-Secrets.ps1 -Environment ${1}\"",
    "keys:save": "pwsh -c \"./Set-Secrets.ps1\"",
    "setup": "yarn install && yarn keys:setup ${1:-development}",
    "dev": "next dev -p 3000",
    "build": "next build",
    "postbuild": "next-sitemap",
    "build:analyze": "ANALYZE=true yarn build",
    "start": "next start -p 3000",
    "docker:build": "docker compose up --build",
    "docker:run": "docker compose up",
    "lint:container": "npx mega-linter-runner",
    "lint:js": "eslint \"./{src,playwright}/**/*.{js,jsx}\" --fix",
    "lint:js:rules": "eslint --print-config .eslintrc.js",
    "lint:styles": "stylelint **/*.scss --fix",
    "lint:styles:rules": "stylelint --print-config .",
    "lint:styles:nofix": "stylelint **/*.scss",
    "format": "prettier --write .",
    "pretest:integration:ci": "npx playwright install --with-deps",
    "test:integration": "playwright test --trace on",
    "test:integration:ci": "CI=true playwright test",
    "test:integration:record": "playwright codegen",
    "test:integration:report": "playwright show-report",
    "test:links": "start-server-and-test start http://localhost:3000 \"blc --input http://localhost:3000 --filter-level 3 -ro --exclude /pages/dynamic-sitemap.xml --exclude sitemap.xml.js --exclude https://fonts.* --verbose \"",
    "test:size": "size-limit",
    "test:unit": "jest src --verbose",
    "test:unit:ci": "jest src --ci",
    "test:unit:report": "jest",
    "test:unit:watch": "jest --watch --detectOpenHandles",
    "preflight": "yarn run browserslist --update-db && yarn lint:js && yarn lint:styles && yarn format && yarn test:unit:ci && yarn build && yarn test:integration:ci && yarn test:size && yarn test:integration:report"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "prettier": "^2.8.7"
  }
}
