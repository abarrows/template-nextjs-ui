{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    // "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      // "src/*": ["src/*"],
      // "src/components/*": ["@/src/app/components/*"],
      // "*.module.scss": ["*.module.scss"],
      "@/commons/*": ["src/components/commons/*"],
      "@/context/*": ["src/components/context/*"],
      "@/modules/*": ["src/components/modules/*"],
      "@/sections/*": ["src/components/sections/*"],
      "@/utilities/*": ["src/helpers/utilities/*"],
      "@/helpers/*": ["src/helpers/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "src/design-system-package/dist/**",
    "storybook-static"
  ],
  "include": [
    "redirects.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts"
  ]
}
